			<directory>tests/phpunit/Server</directory>
		</testsuite>

		<!-- template -->

		<testsuite name="template">
			<directory>tests/phpunit/Template</directory>
		</testsuite>

		<!-- validator -->

		<testsuite name="validator">
			<directory>tests/phpunit/Validator</directory>
